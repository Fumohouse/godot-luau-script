{
    "env": {
        "defaultIncludes": [
            "src/**",
            "gen/include/",
            "extern/luau/Compiler/include/",
            "extern/luau/Ast/include/",
            "extern/luau/Common/include/",
            "extern/luau/VM/include/",
            "extern/godot-cpp/include/",
            "extern/godot-cpp/godot-headers/",
            "extern/godot-cpp/gen/include/",
            "extern/Catch2/extras/"
        ],
        "defaultDefines": [
            "DEBUG_ENABLED",
            "TESTS_ENABLED"
        ]
    },
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${defaultIncludes}"
            ],
            "defines": [
                "${defaultDefines}"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-clang-x64"
        }
    ],
    "version": 4
}