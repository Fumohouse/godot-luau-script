{
    "version": "2.0.0",
    "tasks": [
        // basic build tasks
        {
            "label": "build debug",
            "type": "shell",
            "command": "scons",
            "group": "build",
            "linux": {
                "args": [
                    "target=editor",
                    "platform=linux",
                    "use_llvm=yes"
                ]
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build tests",
            "type": "shell",
            "command": "scons",
            "group": "build",
            "linux": {
                "args": [
                    "target=editor",
                    "tests=yes",
                    "platform=linux",
                    "use_llvm=yes"
                ]
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build debug with bindings",
            "type": "shell",
            "command": "scons",
            "group": "build",
            "linux": {
                "args": [
                    "target=editor",
                    "platform=linux",
                    "use_llvm=yes",
                    "generate_luau_bindings=yes"
                ]
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "scons",
            "group": "build",
            "linux": {
                "args": [
                    "target=template_release",
                    "platform=linux",
                    "use_llvm=yes"
                ]
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build release with bindings",
            "type": "shell",
            "command": "scons",
            "group": "build",
            "linux": {
                "args": [
                    "target=template_release",
                    "platform=linux",
                    "use_llvm=yes",
                    "generate_luau_bindings=yes"
                ]
            },
            "problemMatcher": "$gcc"
        },

        // run configurations
        {
            "label": "run editor without debugger",
            "type": "shell",
            "command": "${userHome}/bin/godot4",
            "linux": {
                "args": [
                    "-v",
                    "-e"
                ],
                "options": {
                    "cwd": "${workspaceRoot}/test_project"
                }
            },
            "problemMatcher": "$gcc" // shut up about the problem matcher
        },
        {
            "label": "run test without debugger",
            "type": "shell",
            "command": "${userHome}/bin/godot4",
            "linux": {
                "args": [
                    "-v",
                    "main.tscn",
                    "--luau-tests",
                    "--"
                ],
                "options": {
                    "cwd": "${workspaceRoot}/test_project"
                }
            },
            "problemMatcher": "$gcc" // shut up about the problem matcher
        }
    ]
}